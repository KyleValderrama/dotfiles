decoration {
    rounding = 10

    active_opacity = 1.0
    inactive_opacity = 1.0

    # dim_inactive = true
    dim_strength = 0.2
    dim_around = 0.0

  
    shadow {
        enabled = false
        range = 20
        render_power = 4
        color = rgba(0000004d)
	color_inactive = rgba(00000000)
    }

    # https://wiki.hyprland.org/Configuring/Variables/#blur
    blur {
        enabled = true
        size = 8
        passes = 3
	
	layerrule = unset,hyprpaper
	special = true
	popups = true
	input_methods = true
    }
}

# NOTIFICATIONS

layerrule = blur,notifications
layerrule = ignorezero,notifications
layerrule = animation slide, notifications

# TASKBAR
layerrule = blur,taskbar
layerrule = blurpopups, taskbar
layerrule = ignorezero, taskbar
layerrule = animation slide, taskbar
layerrule = blur,calendar
layerrule = animation slide, calendar
layerrule = ignorezero,calendar
layerrule = ignorezero,menu-closer
layerrule = ignorezero,menu-closer

# MENU

layerrule = blur, wofi 
layerrule = ignorezero, wofi
