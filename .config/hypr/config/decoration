    rounding = 10

    active_opacity = 1.0
    inactive_opacity = 1.0

    # dim_inactive = true
    dim_strength = 0.2
    dim_around = 0.0

  
    shadow {
        enabled = true
        range = 12
        render_power = 4
        color = rgba(0000004d)
				color_inactive = rgba(00000000)
    }

    blur {
        enabled = true
        size = 5
        passes = 3
				noise = 0.03
				layerrule = unset,hyprpaper
				special = true
				popups = true
				input_methods = true
    }
}

