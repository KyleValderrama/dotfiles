(include "./widgets/right/calendar/calendar.yuck")
(include "./widgets/right/right.yuck")
(include "./widgets/left/left.yuck")
(include "./widgets/center/center.yuck")

(defwidget taskbar []
    (centerbox
        :orientation "h"
        :class "bar"
        :halign "fill"
        (left)
        (center)
        (right)
    )
)

(defwindow taskbar
    :monitor 0
    :exclusive true
    :geometry
        (geometry
            :x "0"
            :y "0"
            :width "100%"
            :anchor "top center"
            :hexpand true
        )
    :stacking "fg"
    :namespace "taskbar"
    :windowtype "dock"
    (taskbar)
)
