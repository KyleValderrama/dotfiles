{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },
  "ui_font_size": 13,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "Andromeda",
    "dark": "One Dark"
  },
  "soft_wrap": "editor_width",
  "ui_font_family": "SF Compact Text",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  }
}
